<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pau.clashroyale.MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="true"
        android:id="@+id/scrollView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">



    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="COMUNES"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_comunes"
            android:layout_marginBottom="10dp"
            android:textAppearance="@android:style/TextAppearance.Holo.Medium"
            android:textStyle="normal|bold"
            android:textColor="?android:attr/textColorAlertDialogListItem" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/duende"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/duendes" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/duendelanza"
                android:id="@+id/duendelanza"
                android:layout_marginRight="10dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageButton9"
                android:layout_toEndOf="@+id/imageButton9" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/bombardero"
                android:id="@+id/bombardero"
                android:layout_marginRight="10dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageButton10"
                android:layout_toEndOf="@+id/imageButton10" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/flechas"
                android:id="@+id/flechas"
                android:layout_marginTop="0dp"
                android:layout_marginRight="60dp"

                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/scrollView2"
                android:layout_alignEnd="@+id/scrollView2" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/canon"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:id="@+id/canon" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/descarga"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/descarga" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/espiritfoc"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/espiritfoc" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/espiritgel"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:id="@+id/espiritgel" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/arquera"
                android:id="@+id/arquera"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageButton12"
                android:layout_toEndOf="@+id/imageButton12" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/caballero"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/caballero"
                android:layout_below="@+id/imageButton9"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/esqueleto"
                android:id="@+id/esqueleto"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignTop="@+id/imageButton14"
                android:layout_toRightOf="@+id/imageButton14"
                android:layout_toEndOf="@+id/imageButton14" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/esbirros"
                android:layout_marginTop="10dp"
                android:layout_marginRight="60dp"
                android:layout_alignTop="@+id/imageButton15"
                android:layout_toRightOf="@+id/imageButton15"
                android:layout_toEndOf="@+id/imageButton15"
                android:id="@+id/esbirro" />
        </TableRow>

        <TextView
            android:text="ESPECIALES"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_especiales"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:textAppearance="@android:style/TextAppearance.Holo.Medium"
            android:textStyle="normal|bold"
            android:textColor="?android:attr/textColorAlertDialogListItem"
            android:textAlignment="viewStart" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/bomb"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="0dp"
                android:id="@+id/bomb" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/bola"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/bola" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/choza"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/choza" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/chozabarb"
                android:layout_marginTop="10dp"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="0dp"
                android:id="@+id/chozabarb" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/gigante"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="0dp"
                android:id="@+id/gigante" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/minipekka"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/minipekka" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/monta"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/monta" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/valq"
                android:layout_marginTop="10dp"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="0dp"
                android:id="@+id/valquiria" />
        </TableRow>

        <TextView
            android:text="EPICAS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_epicas"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:textAppearance="@android:style/TextAppearance.Holo.Medium"
            android:textStyle="normal|bold"
            android:textColor="?android:attr/textColorAlertDialogListItem" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/principe"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/principe" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/bruja"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/bruja" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/golem"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/golem" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/pekka"
                android:layout_marginTop="10dp"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="0dp"
                android:id="@+id/pekka" />
        </TableRow>

        <TextView
            android:text="LEGENDARIAS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_legendarias"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:textAppearance="@android:style/TextAppearance.Holo.Medium"
            android:textStyle="normal|bold"
            android:textColor="?android:attr/textColorAlertDialogListItem" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/magohielo"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/magohielo" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/princesa"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/princesa" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/chispitas"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:onClick="onClick"
                android:id="@+id/chispitas" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/sabueso"
                android:layout_marginTop="10dp"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="0dp"
                android:id="@+id/sabueso" />

        </TableRow>
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            >

            <Button
                android:text="JUGA!"
                android:layout_width="281dp"
                android:layout_height="wrap_content"
                android:id="@+id/button3"
                android:layout_gravity="center"
                android:textAlignment="center" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:weightSum="1">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginLeft="25dp"
                android:id="@+id/textView"
                android:textAlignment="center"
                android:textSize="18sp" />

        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            >

            <EditText
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/resposta"
                android:layout_marginEnd="50dp"
                android:layout_weight="0.38"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            >

            <Button
                android:text="OK"
                android:layout_width="284dp"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:layout_gravity="center"
                android:textAlignment="center"/>
        </LinearLayout>
    </TableLayout>
    </ScrollView>

</RelativeLayout>
